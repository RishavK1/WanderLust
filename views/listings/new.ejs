<%layout("./layouts/boilerplate") %>


  <div class="row mt-3">
    <div class="col-8 offset-2">

      <h3>Create a new Listing</h3>
      <form method="post" action="/listings">
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input name="listing[title]" placeholder="Add a title" type="text" class="form-control" />
        </div>
        <div class="mb-3">
          <lable for="description" class="form-label">
            Description
          </lable>
          <textarea name="listing[description]" class="form-control"></textarea>
        </div>
        <div class="mb-3">
          <lable for="image" class="form-label">
            Image Link
          </lable>
          <input name="listing[image]" placeholder="enter image URL/link" type="text" class="form-control" />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">
              Price
            </lable>
            <input name="listing[price]" placeholder="500" type="number" class="form-control" />
          </div>
          <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">
              Country
            </lable>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" />
          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-label">
            Location
          </lable>
          <input name="listing[location]" placeholder="Haryana , Karnal" type="text" class="form-control" />
        </div>

        <br>
        <button class="btn btn-dark add-itm mb-4">Add</button>


      </form>
    </div>
  </div>